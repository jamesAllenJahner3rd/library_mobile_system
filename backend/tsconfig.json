{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false, 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "types": ["node"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}